<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:padding="10dp"
            android:background="@color/colorPrimary">
            <TextView
                android:text="#"
                android:layout_width="40dp"
                android:textStyle="bold"/>
            <TextView
                android:text="Demonstrate the following KaeshiWaza(self-defense techniques)"
                android:layout_width="200dp"
                android:textStyle="bold"/>
            <TextView
                android:text="Score (1-5)"
                android:layout_width="60dp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:padding="10dp"
            android:background="@color/colorPattern">
            <TextView
                android:text="7"
                android:layout_width="40dp"/>
            <TextView
                android:text="Strangles front"
                android:layout_width="200dp"/>
            <EditText
                android:id="@+id/editText7"
                android:inputType="number"
                android:layout_width="60dp"/>
        </TableRow>
        <TableRow
            android:padding="10dp"
            android:background="@color/colorWhite">
            <TextView
                android:text="8"
                android:layout_width="40dp"/>
            <TextView
                android:text="Strangles side"
                android:layout_width="200dp"/>
            <EditText
                android:id="@+id/editText8"
                android:inputType="number"
                android:layout_width="60dp"/>
        </TableRow>
        <TableRow
            android:padding="10dp"
            android:background="@color/colorPattern">
            <TextView
                android:text="9"
                android:layout_width="40dp"/>
            <TextView
                android:text="Strangles rear"
                android:layout_width="200dp"/>
            <EditText
                android:id="@+id/editText9"
                android:inputType="number"
                android:layout_width="60dp"/>
        </TableRow>
        <TableRow
            android:padding="10dp"
            android:background="@color/colorWhite">
            <TextView
                android:text="10"
                android:layout_width="40dp"/>
            <TextView
                android:text="Bear hugs Behind (over arms)"
                android:layout_width="200dp"/>
            <EditText
                android:id="@+id/editText10"
                android:inputType="number"
                android:layout_width="60dp"/>
        </TableRow>
        <TableRow
            android:padding="10dp"
            android:background="@color/colorPattern">
            <TextView
                android:text="11"
                android:layout_width="40dp"/>
            <TextView
                android:text="Bear hugs Behind (under arms)"
                android:layout_width="200dp"/>
            <EditText
                android:id="@+id/editText11"
                android:inputType="number"
                android:layout_width="60dp"/>
        </TableRow>
        <TableRow
            android:padding="10dp"
            android:background="@color/colorWhite">
            <TextView
                android:text="12"
                android:layout_width="40dp"/>
            <TextView
                android:text="Bear hugs Front (over arms)"
                android:layout_width="200dp"/>
            <EditText
                android:id="@+id/editText12"
                android:inputType="number"
                android:layout_width="60dp"/>
        </TableRow>
        <TableRow
            android:padding="10dp"
            android:background="@color/colorPattern">
            <TextView
                android:text="13"
                android:layout_width="40dp"/>
            <TextView
                android:text="Bear hugs Front (under arms)"
                android:layout_width="200dp"/>
            <EditText
                android:id="@+id/editText13"
                android:inputType="number"
                android:layout_width="60dp"/>
        </TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">> next"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="openResult"
            />

    </TableLayout>

</ScrollView>
